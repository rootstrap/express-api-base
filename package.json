{
  "name": "express-api-base",
  "version": "1.0.0",
  "description": "Rest api base with nodejs + express",
  "license": "MIT",
  "scripts": {
    "dev": "yarn && nodemon --watch 'src/**/*.ts' --exec 'ts-node -r tsconfig-paths/register' src/server.ts",
    "prebuild": "rm -rf /dist",
    "build": "tsc",
    "start": "node -r tsconfig-paths/register -r ts-node/register ./dist/index.js",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "test": "ENVIRONMENT=test jest --runInBand --useStderr",
    "test:cover": "yarn test --coverage",
    "test:ci": "ENVIRONMENT=ci jest",
    "db:setup": "yarn schema:sync && yarn seed:run",
    "db:reset": "yarn schema:drop && yarn db:setup",
    "lint": "eslint \"src/**\" --color",
    "seed:config": "ts-node ./node_modules/typeorm-seeding/dist/cli.js config",
    "seed:run": "ts-node -r tsconfig-paths/register ./node_modules/typeorm-seeding/dist/cli.js seed",
    "schema:drop": "ts-node ./node_modules/typeorm/cli.js schema:drop",
    "schema:sync": "ts-node ./node_modules/typeorm/cli.js schema:sync",
    "migration:generate": "yarn run typeorm migration:create -n"
  },
  "jestSonar": {
    "reportPath": "__tests__",
    "reportFile": "test-report.xml",
    "indent": 2
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.7",
    "@types/express-rate-limit": "^5.1.0",
    "@types/faker": "^5.1.3",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^26.0.15",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.162",
    "@types/morgan": "^1.9.2",
    "@types/multer": "^1.4.4",
    "@types/node": "^14.14.6",
    "@types/supertest": "^2.0.10",
    "dotenv": "^8.2.0",
    "eslint": "^7.12.1",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest-sonar-reporter": "^2.0.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typeorm-seeding": "^1.6.1",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "@admin-bro/express": "^3.0.1",
    "@admin-bro/typeorm": "^1.2.0",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "admin-bro": "^3.2.3",
    "admin-bro-expressjs": "^2.1.1",
    "aws-sdk": "^2.781.0",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-formidable": "^1.2.0",
    "express-rate-limit": "^5.1.3",
    "helmet": "^4.1.1",
    "jest": "^26.6.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "pg": "^8.4.2",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0-alpha.6",
    "supertest": "^6.0.0",
    "ts-jest": "^26.4.3",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.28"
  }
}
